# Test Environment Configuration

# Base URLs and Domain
TEST_BASE_URL=http://localhost:3210
TEST_DOMAIN=lobe.yourdomain.com

# Test User Credentials
TEST_USER=test@example.com
TEST_PASSWORD=testpass123

# Service Configuration
POSTGRES_PASSWORD=your_secure_password
LOBE_DB_NAME=lobe_chat
MINIO_PORT=9000
MINIO_ROOT_USER=minio_user
MINIO_ROOT_PASSWORD=minio_password
MINIO_LOBE_BUCKET=lobe-chat
CASDOOR_PORT=8000

# Coolify Configuration
COOLIFY_URL=http://localhost:8000
COOLIFY_API_KEY=your_coolify_api_key

# Traefik Configuration
TRAEFIK_DASHBOARD_URL=http://localhost:8080
TRAEFIK_API_KEY=your_traefik_api_key

# Test Execution Settings
CI=false                    # Set to true in CI environment
DEBUG=pw:api               # Enable Playwright debug logs
PWDEBUG=1                 # Enable Playwright Inspector
HEADLESS=false            # Run tests in headless mode
WORKERS=4                 # Number of parallel workers
RETRIES=2                 # Number of retry attempts

# Reporting Configuration
REPORT_PORTAL_URL=        # ReportPortal instance URL (optional)
REPORT_PORTAL_TOKEN=      # ReportPortal authentication token (optional)
JUNIT_REPORT_PATH=./test-results/junit.xml

# Test Data Configuration
TEST_FILE_PATH=./test-assets/test-file.txt
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes